<!--compontent/indexPanel/indexPanel.wxml-->
<view class="cont">
    <view class="indexpanel" >
        <view class="index_detail"wx:for="{{indexList}}" wx:key="{{index}}">
            <view class="index index_name">
                    {{item.stockName}}  
            </view>
            <view class="index index_data">
                    {{item.cjj}}
            </view>
            <view class="index index_rf">
                <view class="index_num">
                    {{item.cj}}
                </view>
                <view class="index_percent">
                    ({{item.rise}})
                </view>
              
            </view>
        </view>
        <view class="index_search">
                <navigator class="triangle_border_right" url="../../pages/selectIndex/selectIndex">
                    
                </navigator>
        </view>
    </view>
</view>
