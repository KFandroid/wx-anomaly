                    {{item.cj}}
                <!-- </text> -->
                <!-- <text class="index_percent"> -->
                    ({{item.rise}})% 
                <!-- </text> -->
              
            </view>
        </view>
        <navigator class="index_search"  url="../../pages/selectIndex/selectIndex">
                <view class="triangle_border_right">
                    
                </view>
        </navigator>
    </view>
</view>
