.container{
    
}
.list-cont{
    padding-right:10rpx;
    border-bottom: 2rpx solid gray;
}
.list-title{
    height:34px;

}
.list-title,.listTime{
    font-size: 26rpx;
}
.listIcon{
    width: 20rpx;
    height:20rpx;
    border-radius:50%;
    background-color:red;
    float:left;
    margin:6rpx;
}
.listContent{
    overflow: hidden;
    text-overflow:ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.listTime{
    text-align:right;
    
}