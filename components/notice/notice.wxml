<!--components/notice/notice.wxml-->
<scroll-view class="container" scroll-y="true" style="height: {{height}}px;">
    <view wx:for="{{notieItems}}" class="list-cont">
        <view class="list-title">
            <view class="listIcon"></view>
            <view class="listContent">
                {{item.content}}
            </view>
        </view>
        <view class="listTime">
            {{item.time}}
        </view>
    </view>
</scroll-view>
<view class="pagination-container">
      <view class='pageBtn' bindtap='pageUp' hidden="{{currentPage === 1}}">上一页</view>
      <text>{{currentPage}}/{{totalPage}}页</text>
      <view class='pageBtn' bindtap='pageDown' hidden="{{currentPage === totalPage}}">下一页</view>
    </view>